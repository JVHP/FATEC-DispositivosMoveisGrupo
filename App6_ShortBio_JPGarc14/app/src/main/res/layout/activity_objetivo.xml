<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".objetivo">

    <TextView
            android:text="Objetivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:layout_width="270dp"
            android:layout_height="210dp"
            app:srcCompat="@drawable/bancodedados"
            android:id="@+id/imageView2"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo"
            app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:text="Meu principal objetivo é encontrar uma área que eu possa considerar como minha vocação. Embora tenha muito interesse em áreas variadas da TI, não possuo uma definida como principal. Tenho grande interesse nas áreas de segurança, banco de dados e engenharia de software."
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:layout_editor_absoluteY="347dp"
            tools:layout_editor_absoluteX="97dp"/>

    <Button
            android:text="Voltar"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:id="@+id/voltar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.2"
            android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>