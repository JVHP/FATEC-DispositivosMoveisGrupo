<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".experiencia">

    <TextView
            android:text="Experiência"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titulo"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:layout_width="282dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/programacao"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteY="105dp"
            tools:layout_editor_absoluteX="90dp"/>
    <TextView
            android:text="Durante o curso de Análise e Desenvolvimento de Sistemas, estudei as seguintes linguagens de programação: C++, CSS, HTML, Java, Javascript, Kotlin, PHP e Python. Meu primeiro contato com algoritmos foi com Portugol."
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:layout_editor_absoluteY="275dp"
            tools:layout_editor_absoluteX="110dp"/>
    <Button
            android:text="Voltar"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:id="@+id/voltar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.141"
            android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>